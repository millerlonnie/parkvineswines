 <!DOCTYPE html>
<html>
<head>
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/FavIcon/favicon.ico" />    @*adding a fav icon*@ 


    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>@ViewBag.Title - Park Vines</title>
    @System.Web.Optimization.Styles.Render("~/bundles/css")
    @System.Web.Optimization.Scripts.Render("~/bundles/modernizr")
    @System.Web.Optimization.Scripts.Render("~/bundles/Scripts/Libs/js")
    @System.Web.Optimization.Scripts.Render("~/bundles/Scripts/Libs/Globalize/js")
    @System.Web.Optimization.Scripts.Render(String.Format("~/Scripts/Libs/Globalize/Cultures/globalize.culture.{0}.js", "en-US"))
    @System.Web.Optimization.Scripts.Render(String.Format("~/Scripts/Libs/Globalize/Cultures/jquery.ui.datepicker-{0}.js", "en-US"))
    @System.Web.Optimization.Scripts.Render("~/bundles/Scripts/Apps/js")

    @Styles.Render("~/Content/css")                        @*adding bootstap files*@
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/creative.css" rel="stylesheet" /> @*adding bootsrap theme*@

    <link href="~/Content/Font-awesome/font-awesome.min.css" rel="stylesheet" /> 
    <link href="~/Content/Font-awesome/font-awesome.css" rel="stylesheet" />


    <style>
        .glyphicon {                   /*specifying glyphicon size and colour*/
            font-size: 5em;
            color: #ff9900;
        }

        h1 {                            /*specifying header 1 colour*/
            color: #800000;
        }

        h2 {                             /*specifying header 2 colour*/
            color: #cc3300;
        }

        p {                              /*specifying paragraph 1  colour and size */
            color: #cc3300;             
            font-size: 17px;
        }

        body {
            padding-top: 50px;          /*padding  generate space around content, space on top of the body of 50px*/
            padding-bottom: 20px;        /*padding  generate space around content, space at the bootom of the body of 20px*/
            background-repeat: no-repeat;   /*specify if/how a background image will be repeated*/
            background-attachment: scroll; /*specify if a background image is fixed or scrolls with the rest of the page, scroll > ensures background is fixed*/
            background-size: cover;       /*set the size of a background image, cover: fill the whole background with background image*/
            background-attachment: fixed;  /*specify if a background image is fixed or scrolls with the rest of the page*/
            background-image: url('../Images/Background/Background.jpg'); /*specify backgound image*/
        }

        .whiteBackground {
            background-color: wheat;
            opacity: 0.9;  /*make background transparent*/
            padding: 2em; /*clears an area around the content*/
        }

          .imgthumbnail 
        { 
            height:80px; 
            width:80px; 
        } 
        .imgdiv 
        { 
            height:349px; 
            width:334px; 
            background-color:#FFF;
            margin : 0px auto;
            padding:10px; 
            border:solid 1px #D3CFCB;             
        }        

    </style>
     
    
         

</head>
<body>



    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>

                </button>
                <a class="navbar-brand"> <img src="~/Content/Images/logo.png" alt="Company logo"   /> </a>
                @Html.ActionLink("Park Vines", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    
                    

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Wines<b class="caret"></b></a>
                        <ul class="dropdown-menu">  <!---Creating a drop down meneu wine categories-->

                           <li>@Html.ActionLink("Red", "ProductWines", "Home", new { category = "Red" }, null)</li>  
                          
                         <li>@Html.ActionLink("White", "ProductWines", "Home", new { category = "White" }, null) </li>   
                            
                           <li>@Html.ActionLink("Rose", "ProductWines", "Home", new { category = "Rose" }, null)</li> 
                            
                         <li>@Html.ActionLink("Sparkling", "ProductWines", "Home", new { category = "Sparkling" }, null)</li>   
                             
                        <li>@Html.ActionLink("Champagne", "ProductWines", "Home", new { category = "Champagne" }, null)</li>     
                            
                        <li>@Html.ActionLink("FineWine", "ProductWines", "Home", new { category = "FineWine" }, null)</li>    
                         
                         <li>@Html.ActionLink("Fortifed", "ProductWines", "Home", new { category = "Fortifed" }, null)</li>   
                            
                          <li>@Html.ActionLink("Other", "ProductWines", "Home", new { category = "Other" }, null)</li>  
                        </ul>



@*<li>@Html.ActionLink("Wineries", "Index", "Manage")</li>*@
                     
                   
                    <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
                    <span class="glyphicon glyphicon-shopping-cart" style='font-size: 2em'></span>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <!-----------                 ----------> 

    <div class="container body-content whiteBackground">
        
          

            <div class="row">

                @RenderBody()
                <hr />
                <footer>





                    <div class="container">
                        <div class="row">
                            <div class="col-sm-2"> @Html.ActionLink("Terms & Conditions", "TermsConditions", "Home") </div>
                            <div class="col-sm-2"></div>
                             <div class="col-sm-2"> <img src="~/Content/Images/drinkaware.jpg" width="200" height="100" /></div> 
                     
                                <div class="col-sm-2"></div>
                                <div class="col-sm-2"> <img src="~/Content/Images/PayPal.png" width="200" height="100" /> </div>
                            </div>
                    </div>
                    <hr />

                    <p>&copy; @DateTime.Now.Year - Park Vines</p>
                </footer>


            </div>
         
    </div>





       

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
