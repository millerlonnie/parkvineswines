@model IEnumerable<WimbledonWines.Models.Wine>

@{
    ViewBag.Title = "OrderByPrice";
}

<h2>OrderByPrice</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    <div id=hyperlink align="right">
        @Html.ActionLink("List All", "Index")
        @Html.ActionLink("Order By Price", "OrderByPrice")
        @Html.ActionLink("Order By Name", "OrderByName")
    </div>
</p>
<table class="table">
    <tr>
        <th>
