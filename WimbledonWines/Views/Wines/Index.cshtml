@model IEnumerable<WimbledonWines.Models.Wine>
@using WimbledonWines.Models
@{
    ViewBag.Title = "All Wines";
}





@Html.Partial("_confirmmsg") <!--A prartial view to inform user of sucssful actions using bootstrp alters -->

<h2>All Wines</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
